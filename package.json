{
  "name": "elara",
  "version": "1.1.6",
  "publishConfig": {
    "access": "public"
  },
  "description": "AI-powered developer productivity desktop app with CLI integration for commit message generation and more",
  "bin": {
    "elara": "./bin/cli.js"
  },
  "files": [
    "bin",
    "src",
    "resources",
    "out",
    "package.json",
    "electron.vite.config.ts"
  ],
  "main": "./out/main/index.js",
  "author": "KhanhRomVN",
  "scripts": {
    "dev": "node scripts/dev-setup.js && node -e \"process.env.SILENT_SERVER='true'; require('child_process').spawn('npx', ['electron-vite', 'dev'], { stdio: 'inherit', shell: true })\"",
    "dev:electron": "node scripts/dev-setup.js && electron-vite dev",
    "dev:server": "echo '‚ö†Ô∏è  Standalone backend is deprecated. Backend is now embedded in Electron. Use npm run dev instead.' && cd backend && npm run dev > ../backend.log 2>&1",
    "watch:server": "tail -f server.log",
    "build": "npm run typecheck && electron-vite build && electron-builder --win --linux",
    "preview": "electron-vite preview",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:security": "secretlint \"**/*\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "postinstall": "electron-builder install-app-deps && node scripts/dev-setup.js",
    "build:all": "npm run build",
    "build:win": "npm run typecheck && electron-vite build && electron-builder --win",
    "build:mac": "npm run typecheck && electron-vite build && electron-builder --mac",
    "build:linux": "npm run typecheck && electron-vite build && electron-builder --linux",
    "build:lite": "npm run typecheck && electron-vite build && electron-builder --linux deb --x64",
    "install-cli": "node scripts/install-cli.js",
    "uninstall-cli": "node scripts/uninstall-cli.js",
    "setup-cli": "node scripts/dev-setup.js",
    "setup-zed": "node scripts/setup-zed.js",
    "build-zed": "node scripts/build-zed.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@arcjet/node": "^1.0.0-beta.17",
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@oneidentity/zstd-js": "^1.0.3",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^2.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/node-forge": "^1.3.14",
    "@types/tough-cookie": "^4.0.5",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.7",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "fs-extra": "^11.3.3",
    "fuse.js": "^7.1.0",
    "helmet": "^8.1.0",
    "http-mitm-proxy": "^1.1.0",
    "js-tiktoken": "^1.0.21",
    "lucide-react": "^0.294.0",
    "monaco-editor": "^0.55.1",
    "mongoose": "^9.1.4",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "node-forge": "^1.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "reactflow": "^11.11.4",
    "recharts": "^3.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "tough-cookie": "^6.0.0",
    "uuid": "^13.0.0",
    "vscode-icons-js": "^11.6.1",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gitleaks": "^1.0.0",
    "globals": "^16.5.0",
    "husky": "^9.0.0",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "secretlint": "^11.3.0",
    "tailwindcss": "^3.3.0",
    "talisman": "^1.1.4",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c 'echo \"üîç Running ESLint...\"'",
      "eslint --fix",
      "bash -c 'echo \"‚ú® Running Prettier...\"'",
      "prettier --write",
      "bash -c 'echo \"üîß Running TypeScript compiler check...\"'",
      "bash -c 'tsc --noEmit -p tsconfig.json'",
      "bash -c 'echo \"üõ°Ô∏è  Running njsscan security scan...\" && /home/khanhromvn/.local/bin/njsscan --sarif --output njsscan.sarif . || true'"
    ],
    "*.{json,css,md}": [
      "bash -c 'echo \"‚ú® Running Prettier...\"'",
      "prettier --write"
    ],
    "*": [
      "bash -c 'echo \"üîê Running secretlint...\"'",
      "secretlint --maskSecrets",
      "bash -c 'echo \"üõ°Ô∏è  Running GitGuardian (ggshield)...\" && /home/khanhromvn/.local/bin/ggshield secret scan pre-commit --exit-zero || true'",
      "bash -c 'echo \"üîç Running Gitleaks...\" && /home/khanhromvn/.local/bin/gitleaks protect --staged --redact --verbose || true'",
      "bash -c 'echo \"üîí Running Talisman...\" && /home/khanhromvn/.local/bin/talisman --pattern staged || true'"
    ]
  }
}
